#export CPLUS_INCLUDE_PATH=/isitools/gcc7.5.0
#export CPATH=/isitools/gcc7.5.0/include
#export COMPILER_PATH=/isitools/gcc7.5.0/
#export LIBRARY_PATH=/isitools/gcc7.5.0/lib64
export CC=/isitools/gcc7.5.0/bin/gcc
export CXX=/isitools/gcc7.5.0/bin/g++
