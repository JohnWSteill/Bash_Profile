# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
        . ~/.bashrc
fi

export PATH=/isitools/gcc7.5.0:/isitools/gcc7.5.0/bin:/isitools/gcc7.5.0/lib:/isitools/gcc7.5.0/lib64:$PATH
#export PATH=/isitools/gcc4.8.4:/isitools/gcc4.8.4/bin:/isitools/gcc4.8.4/lib:/isitools/gcc4.8.4/lib64:$PATH
#export PATH=/isitools/gcc4.7.4:/isitools/gcc4.7.4/bin:/isitools/gcc4.7.4/lib:/isitools/gcc4.7.4/lib64:$PATH
#export PATH=/isitools/gcc4.6.4:/isitools/gcc4.6.4/bin:/isitools/gcc4.6.4/lib:/isitools/gcc4.6.4/lib64:$PATH

export ISIHOME=/isitools
export LD_LIBRARY_PATH=/isitools/gcc7.5.0/lib:/isitools/gcc7.5.0/lib64:$LD_LIBRARY_PATH

# GCC stuff
alias cc="/isitools/gcc7.5.0/bin/gcc"
alias g++="/isitools/gcc7.5.0/bin/g++"
