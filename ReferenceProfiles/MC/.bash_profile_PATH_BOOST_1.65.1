# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
        . ~/.bashrc
fi

# User specific environment and startup programs
export PATH=/isitools/boost_1_65_1:/isitools/boost_1_65_1/lib:/isitools/boost_1_65_1/include:$PATH
export LD_LIBRARY_PATH=/isitools/boost_1_65_1/include/boost:/isitools/boost_1_65_1/lib:$LD_LIBRARY_PATH

export BOOST_ROOT=/isitools/boost_1_65_1
export BOOST_INCLUDEDIR="$BOOST_ROOT/include"
export BOOST_LIBRARYDIR="$BOOST_ROOT/lib"

export CFLAGS="-I/isitools/boost_1_65_1/include"
export LDFLAGS="-L/isitools/boost_1_65_1/lib"
