# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
        . ~/.bashrc
fi

# User specific environment and startup programs

export PERL_LOCAL_LIB_ROOT=/home/mikec/perl5.10.1/lib/5.10.1 
